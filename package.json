{
  "name": "focus-cards",
  "version": "1.0.0",
  "description": "A minimalist, fullscreen web application for managing tasks and focus items",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": ["productivity", "focus", "tasks", "minimalist"],
  "author": "selloa",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.selloa.focuscards",
    "productName": "Focus Cards",
    "directories": {
      "output": "dist"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
